<%= form_for [:admin, @project, @assignment] do |f| %>

  <%= render 'shared/error_msg', object: @assignment %>

  <div class="form-group">
    <%= f.label :user_id, "Select User", class: "label-space" %><br />
    <%= f.select :user_id, @users, { include_blank: 'Select User' }, { class: "form-control" , required: true } %>
  </div>

  <div class="form-group">
    <%= f.label :role , class: "label-space" %>
    <%= f.text_field :role, class: "form-control", required: true , maxlength: "20" %>
  </div>

  <div class="action">
      <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
