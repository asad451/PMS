<%= form_for [:admin, @client] do |f| %>

  <%= render 'shared/error_msg', object: @client %>

  <div class="form-group">
    <%= f.label :name , class: "label-space" %>
    <%= f.text_field :name, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "label-space" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :country , class: "label-space" %>
    <%= f.text_field :country, class: "form-control", autofocus: true %>
  </div>

  <div class="action">
      <%= f.submit class: 'btn btn-primary action' %>
  </div>

<% end %>
