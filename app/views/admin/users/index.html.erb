<h3 class="title-header">All Users</h3><br>
<%= paginate @users %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>E-mail</th>
      <th>Contact#</th>
      <th>Gender</th>
      <th>Role</th>
      <th>Enable / Disable</th>
      <th>Manager</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.contact %></td>
        <td><%= user.gender %></td>
        <td><%= user.role %></td>
        <td><%= change_user_status(user) %></td>
        <td><%= change_user_role(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
