<h1 class="title-header">Time Logs</h1>
<div class="contain well">

  <%= link_to new_time_log_path, class: "btn btn-primary time-btn" do %>
    <span class="glyphicon glyphicon-plus"></span>Add Time Log
  <% end %>

  <table class="table table-hover">

    <thead>
      <tr>
        <th>User</th>
        <th>Project</th>
        <th>Start Date</th>
        <th>Start Time</th>
        <th>End Date</th>
        <th>End Time</th>
        <th class="col-xs-1">Edit</th>
        <th class="col-xs-1">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @timelogs.each do |timelog| %>
        <tr>
          <td><%= timelog.user.username %></td>
          <td><%= timelog.project.title %></td>
          <td><%= timelog.start_time.to_date %></td>
          <td><%= time_format(timelog.start_time) %></td>
          <td><%= timelog.end_time.to_date %></td>
          <td><%= time_format(timelog.end_time) %></td>

          <% if timelog.user == current_user %>
            <td>
              <%= link_to edit_time_log_path(timelog) do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
            </td>

            <td>
              <%= link_to time_log_path(timelog), method: :delete, data: { confirm: "Are you sure ?" } do %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </td>
          <% end %>

        </tr>
      <% end %>
    </tbody>

  </table>
</div>
