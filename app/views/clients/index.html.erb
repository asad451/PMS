<h3 class="title-header">Our Clients</h3>

<%= form_for clients_path, method: 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<div class="row">
  <% @clients.each do |client| %>
    <div class="col-sm-3">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= client.name %></h3>
          <span class="glyphicon glyphicon-user client-icon"></span>
          <h4><%= client.country %></h4>
          <h5><%= client.email %></h5>
          <p><%= link_to "View Client", client_path(client.id), class: "btn btn-primary" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @clients %>
