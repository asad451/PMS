    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "PMS", root_path %></li>
    </ul>
    
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span>   Home
          <% end %>
